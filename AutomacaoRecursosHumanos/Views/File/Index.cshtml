@{
    ViewData["Title"] = "Fechamento de ponto automático";
    var data = ViewData["Message"];
}

<h1>@ViewData["Title"]</h1>

<div>
    @using (Html.BeginForm("Upload", "File", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <label for="file">Faça o upload dos arquivos .CSV para gerar o cálculo de pagamento e relatório com os resultados em formato .JSON:</label>
        <br>
        <br>
        <input type="file" class="btn-primary" name="files" id="file" multiple />
        <br>
        <input type="submit" class="botao" value="Enviar arquivos"/>
        <br>
        <br>
        <p class="erro">@data</p>
    }
</div>

<style>
    label {
        font-size: 18px;
    }

    .botao {
        background-color: green;
        color:white;
        font-weight: bold;
    }

    .erro {
        background-color: red;
        text-align: center;
        color: white;
    }

</style>